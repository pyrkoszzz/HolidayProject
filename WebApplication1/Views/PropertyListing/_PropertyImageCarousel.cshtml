@model PropertyListingModel

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        @if(@Model.Images.ToList().Count == 0)
        {
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        }
        @for (var i = 0; i < @Model.Images.ToList().Count; i++)
        {
            @if(i == 0)
            {
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            }
            else
            {
                <li data-target="#carouselExampleIndicators" data-slide-to="@i"></li>
            }
        }
    </ol>
    <div class="carousel-inner text-center">
        @for (var i = 0; i < @Model.Images.ToList().Count; i++)
        {
            @if(i == 0)
            {
                <div class="carousel-item active">
                    <img class="d-block w-100 image-cropped" src="@Model.Images.ToList()[@i]" alt="Property image">
                </div>
            }
            else
            {
                <div class="carousel-item">
                    <img class="d-block w-100 image-cropped" src="@Model.Images.ToList()[@i]" alt="Property image">
                </div>
            }
        }
        @if(@Model.Images.ToList().Count == 0)
        {
            <div class="carousel-item active">
                <img class="d-block w-100 image-cropped" src="/assets/no_photo.jpg" alt="Property image">
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
